@page "/"

<PageTitle>Home</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Hello, World!</MudText>
<MudText Typo="Typo.body1" Class="mb-4">Welcome to your new Blazor app with MudBlazor!</MudText>

<MudCard Elevation="2" Class="pa-4">
    <MudCardContent>
        <MudText Typo="Typo.h6">Get Started</MudText>
        <MudText Typo="Typo.body2" Class="mt-2">
            This is a .NET 10 Blazor Web App with MudBlazor components.
        </MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Rocket">
            Let's Go!
        </MudButton>
    </MudCardActions>
</MudCard>

@* Monitoring/Index.razor - Monitoring dashboard page for SyncthingTemplar *@
@* Displays real-time status and health information for all configured Syncthing instances *@

@page "/monitoring"

<PageTitle>Monitoring - SyncthingTemplar</PageTitle>

@* Page header *@
<MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-6">
    <MudText Typo="Typo.h3">Monitoring Dashboard</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Refresh" Disabled="true">
        Refresh Status
    </MudButton>
</MudStack>

<MudText Typo="Typo.body1" Class="mb-8">
    Real-time status and health monitoring for your Syncthing instances.
</MudText>

@* Placeholder content - will be replaced with monitoring dashboard *@
<MudPaper Class="pa-8" Elevation="0" Outlined="true">
    <MudStack AlignItems="AlignItems.Center" Spacing="4">
        <MudIcon Icon="@Icons.Material.Filled.Monitor" Size="Size.Large" Color="Color.Secondary" />
        <MudText Typo="Typo.h5">No Servers to Monitor</MudText>
        <MudText Typo="Typo.body1" Align="Align.Center" Class="mud-text-secondary">
            Add Syncthing servers to start monitoring their status.
            <br />
            Real-time updates will appear here once servers are configured.
        </MudText>
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" Href="/servers">
            Add Servers
        </MudButton>
    </MudStack>
</MudPaper>

@* Information about monitoring capabilities *@
<MudPaper Class="pa-6 mt-8" Elevation="0" Outlined="true">
    <MudText Typo="Typo.h6" GutterBottom="true">Monitoring Capabilities</MudText>
    <MudSimpleTable Dense="true" Hover="true">
        <thead>
            <tr>
                <th>Monitor Type</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><MudText Typo="Typo.body2"><strong>Server Health</strong></MudText></td>
                <td><MudText Typo="Typo.body2">Check if Syncthing instances are online and responding</MudText></td>
            </tr>
            <tr>
                <td><MudText Typo="Typo.body2"><strong>Connection Status</strong></MudText></td>
                <td><MudText Typo="Typo.body2">Monitor connected devices and their sync status</MudText></td>
            </tr>
            <tr>
                <td><MudText Typo="Typo.body2"><strong>Folder Sync</strong></MudText></td>
                <td><MudText Typo="Typo.body2">Track folder synchronization progress and errors</MudText></td>
            </tr>
            <tr>
                <td><MudText Typo="Typo.body2"><strong>Remote Device Status</strong></MudText></td>
                <td><MudText Typo="Typo.body2">Alert when remote nodes have been offline beyond threshold</MudText></td>
            </tr>
        </tbody>
    </MudSimpleTable>
</MudPaper>

@* Real-time updates note *@
<MudAlert Severity="Severity.Info" Class="mt-6" Dense="true">
    <MudText Typo="Typo.body2">
        All monitoring uses push-based updates from Syncthing's event API - no polling required.
    </MudText>
</MudAlert>
